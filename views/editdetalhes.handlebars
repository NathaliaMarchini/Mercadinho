<h1 class="text-warning">Detalhes edição</h1>

<form action="/detalhes/updatelista" method="post">
    <input type="hidden" name="produtoID" value="{{listaDetalhes.produtoID}}" />

    <div class="form-group mb-3">
        <label for="produto">Produto:</label>
        <input type="text" class="form-control" value="{{listaDetalhes.Nome}}" id="produto" name="Nome">
    </div>
    <div class="form-group mb-3">
        <label for="preco">Preço:</label>
        <input type="text" class="form-control" value="{{listaDetalhes.preco}}" id="preco" name="preco">
    </div>
    <div class="form-group mb-3">
        <label for="descricao">Descrição:</label>
        <input type="text" class="form-control" value="{{listaDetalhes.descricao}}" id="descricao" name="descricao">
    </div>
    <div class="form-group mb-3">
        <button type="submit" class="btn btn-warning mr-3"> Enviar</button>
    </div>
</form>